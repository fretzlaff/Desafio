<%= form_for @criterium, :html => { :class => "form-horizontal criterium" } do |f| %>

  <% if @criterium.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@criterium.errors.count, "error") %> prohibited this criterium from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @criterium.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:type) %>
  </div>
  <div class="form-group">
    <%= f.label :rule, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rule, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rule) %>
  </div>
  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= f.label :target_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :target_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:target_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                criteria_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
