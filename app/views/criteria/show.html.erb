<%- model_class = Criterium -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @criterium.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rule) %>:</strong></dt>
  <dd><%= @criterium.rule %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @criterium.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:target_id) %>:</strong></dt>
  <dd><%= @criterium.target_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              criteria_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_criterium_path(@criterium), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              criterium_path(@criterium),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
