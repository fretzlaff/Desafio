<div class="form-group">
  <div class="col-lg-3">
    <%= f.attribute_fields do |a| %>
      <%= a.attribute_select nil, class: "form-control" %>
    <% end %>
  </div>
  <div class="col-lg-3">
    <%= f.predicate_select only: [:cont], class: "form-control" %>
  </div>
  <div class="col-lg-4">
    <%= f.value_fields do |v| %>
      <%= v.text_field :value, class: "form-control"%>
    <% end %>
  </div>
  <div class="col-lg-2">
    <%= link_to "remove", '#', class: "remove_fields" %>
  </div>
</div>
